{
  "name": "lite-form",
  "description": "Form HOC for Web Components. It's also works for LitElement.",
  "version": "1.0.2",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realiarthur/lite-form.git"
  },
  "author": "Arthur Islamov (https://github.com/realiarthur)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/realiarthur/lite-form/issues"
  },
  "homepage": "https://github.com/realiarthur/lite-form#readme",
  "keywords": [
    "form",
    "web components",
    "custom element",
    "lit-element",
    "hoc",
    "higher order component",
    "webcomponents",
    "lit",
    "base class",
    "builtin element",
    "forms",
    "validation",
    "submit"
  ],
  "husky-ENABLE_AFTER_FORMATING_COMMIT": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/lite-form.cjs.production.min.js",
      "limit": "7 KB"
    },
    {
      "path": "dist/lite-form.esm.js",
      "limit": "7 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/lodash-es": "^4.17.3",
    "husky": "^4.3.0",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "lodash-es": "^4.17.15"
  }
}
